---
import '@fontsource-variable/archivo'

interface Props {
	title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="https://avatars.githubusercontent.com/u/59713554" />
		<title>{title}</title>
		<meta name="description" content="Jonas Roussel's personal website" />
		<meta name="generator" content={Astro.generator} />
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		box-sizing: border-box;
		font-size: 16px;
		font-family: 'Archivo Variable', system-ui, sans-serif;
		background: rgb(13, 13, 13);
		color: rgb(255, 255, 255);
	}

	*,
	*:before,
	*:after {
		box-sizing: inherit;
	}

	body,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6,
	p,
	ol,
	ul {
		margin: 0;
		padding: 0;
		font-weight: normal;
	}

	ol,
	ul {
		list-style: none;
	}

	img {
		max-width: 100%;
		height: auto;
	}
</style>
