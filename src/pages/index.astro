	<style is:global>
		main {
			padding: 5rem 2.5rem;
			max-width: 56rem;
			min-height: 100svh;
			margin: 0 auto;
		}

		/* Header */

		header h1 {
			font-weight: 900;
			font-size: 2.25rem;
			line-height: 2.5rem;
			margin: 0;
		}

		header h1 img {
			display: inline;
			width: 2.5rem;
			height: 2.5rem;
			max-width: 100%;
			border-radius: 9999px;
			object-fit: cover;
			vertical-align: middle;
		}

		header p {
			font-size: 3.75rem;
			line-height: 1;
			font-weight: 900;
			padding-top: 2.5rem;
		}

		/* About Me */

		section.about-me {
			padding-top: 7rem;
		}

		section.about-me h2 {
			font-size: 2.25rem;
			line-height: 2.5rem;
			font-weight: 900;
		}

		section.about-me p {
			padding-top: 1.25rem;
			font-size: 1.25rem;
			line-height: 1.75rem;
		}

		/* Links */

		section.links {
			display: flex;
			justify-content: space-evenly;
			padding-top: 5rem;
		}

		section.links a {
			padding: 1.25rem;
		}

		section.links a svg {
			width: 40px;
			height: 40px;
			fill: rgb(255, 255, 255);
		}

		/* Timeline */

		section.timeline {
			padding-top: 5rem;
		}

		section.timeline h2 {
			font-size: 2.25rem;
			line-height: 2.5rem;
			font-weight: 900;
		}

		section.timeline ul {
			display: flex;
			flex-direction: column;
			gap: 5rem;
			margin-top: 1.25rem;
		}

		section.timeline ul li p.date {
			font-size: 1.5rem;
			line-height: 2rem;
			color: rgba(255, 255, 255, 0.25);
		}

		section.timeline ul li h3 {
			font-size: 1.5rem;
			line-height: 2rem;
		}

		section.timeline ul li p.description {
			font-size: 1.125rem;
			line-height: 1.75rem;
			color: rgba(255, 255, 255, 0.6);
		}

		section.timeline ul li div.images {
			display: flex;
			scrollbar-width: none;
			overflow-x: scroll;
			gap: 1.25rem;
			margin-top: 1.25rem;
		}

		section.timeline ul li div.images img {
			width: auto;
			height: 11rem;
			object-fit: cover;
			border-radius: 0.75rem;
		}

		/* Footer */

		footer {
			display: flex;
			align-items: center;
			flex-direction: column;
			margin-top: 7rem;
			gap: 1.25rem;
			transition-duration: 0.75s;
			transition-property: color, background-color, border-color, text-decoration-color, fill, stroke;
			transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
			color: rgba(255, 255, 255, 0.25);
			fill: rgba(255, 255, 255, 0.25);
		}

		footer:hover {
			color: rgb(255, 255, 255);
			fill: rgb(255, 255, 255);
		}

		footer svg {
			height: 9rem;
			width: fit-content;
			display: block;
		}

		footer p {
			text-align: center;
		}

		/* Utils */

		.text-highlighted {
			color: rgb(0, 201, 255);
		}
	</style>
